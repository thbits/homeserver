# Common environment variables for all services
# Copy this file to .env and fill in your values

# Data directory path where all service data will be stored
DATADIR=/path/to/data/directory

# Your domain name (without protocol)
DOMAIN_NAME=example.com

# Email for Let's Encrypt SSL certificate notifications
SSL_EMAIL=your-email@example.com

# Timezone for all services
TIMEZONE=Asia/Jerusalem

# Authelia secrets - Generate using:
# docker run --rm authelia/authelia:latest authelia crypto rand --length 64
JWT_SECRET=
SESSION_SECRET=
STORAGE_ENCRYPTION_KEY=