{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "after 3am and before 7am on Sunday"
  ],
  "timezone": "Asia/Jerusalem",
  "platformAutomerge": true,
  "prConcurrentLimit": 10,
  "ignoreDeps": ["lscr.io/linuxserver/jellyfin"],
  "packageRules": [
    {
      "description": "Docker Compose major image updates",
      "matchManagers": ["docker-compose"],
      "matchDatasources": ["docker"],
      "commitMessagePrefix": "deps(compose):",
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "21 days",
      "automerge": false
    },
    {
      "description": "Auto-merge Docker Compose patch updates",
      "matchManagers": ["docker-compose"],
      "matchDatasources": ["docker"],
      "commitMessagePrefix": "deps(compose):",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "7 days",
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Auto-merge Docker Compose minor updates",
      "matchManagers": ["docker-compose"],
      "matchDatasources": ["docker"],
      "commitMessagePrefix": "deps(compose):",
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "ignoreTests": true
}