{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  enabled: true,
  extends: [
    'config:best-practices',
  ],
  prHourlyLimit: 0,
  schedule: [
    'after 6am and before 4pm on sunday',
  ],
  timezone: 'Asia/Jerusalem',
  platformAutomerge: true,
  prConcurrentLimit: 10,
  ignoreDeps: [
    'lscr.io/linuxserver/jellyfin',
  ],
  packageRules: [
    {
      description: 'Postgres: use docker versioning and disable auto-merge for major updates',
      matchPackageNames: ['postgres'],
      matchManagers: ['docker-compose'],
      versioning: 'docker',
      matchUpdateTypes: ['major'],
      automerge: false,
      platformAutomerge: false,
    },
    {
      description: 'Use semver-coerced versioning for all Docker Compose images',
      matchManagers: [
        'docker-compose',
      ],
      matchDatasources: [
        'docker',
      ],
      versioning: 'semver-coerced',
    },
    {
      description: 'Docker Compose major image updates',
      matchManagers: [
        'docker-compose',
      ],
      matchDatasources: [
        'docker',
      ],
      commitMessagePrefix: 'deps(compose):',
      matchUpdateTypes: [
        'major',
      ],
      minimumReleaseAge: '21 days',
      automerge: false,
      platformAutomerge: false,
    },
    {
      description: 'Auto-merge Docker Compose minor updates',
      matchManagers: [
        'docker-compose',
      ],
      matchDatasources: [
        'docker',
      ],
      commitMessagePrefix: 'deps(compose):',
      matchUpdateTypes: [
        'minor',
      ],
      minimumReleaseAge: '7 days',
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
    {
      description: 'Auto-merge Docker Compose patch updates',
      matchManagers: [
        'docker-compose',
      ],
      matchDatasources: [
        'docker',
      ],
      commitMessagePrefix: 'deps(compose):',
      matchUpdateTypes: [
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
    {
      matchManagers: [
        'docker-compose',
      ],
      matchDatasources: [
        'docker',
      ],
      matchCurrentVersion: 'latest',
      pin: {
        enabled: true,
      },
    },
  ],
  ignoreTests: true,
}
